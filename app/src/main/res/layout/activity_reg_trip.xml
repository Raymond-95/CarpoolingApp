<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.raymond.share.RegTrip">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar_layout"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:id="@+id/sourceText"
            android:text="Source"
            android:textColor="@color/white"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textAlignment="center"
            android:gravity="center_vertical"
            android:background="@drawable/rounded_top"
            android:layout_below="@+id/toolbar"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:id="@+id/source"
            android:padding="10dp"
            android:singleLine="true"
            android:lines="1"
            android:background="@drawable/rounded_bottom"
            android:focusable="false"
            android:inputType="textNoSuggestions"
            android:layout_marginTop="-2dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_below="@+id/sourceText"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:id="@+id/destinationText"
            android:text="Destination"
            android:textColor="@color/white"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textAlignment="center"
            android:gravity="center_vertical"
            android:background="@drawable/rounded_top"
            android:layout_below="@+id/source"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:id="@+id/destination"
            android:padding="10dp"
            android:singleLine="true"
            android:lines="1"
            android:background="@drawable/rounded_bottom"
            android:focusable="false"
            android:inputType="textNoSuggestions"
            android:layout_marginTop="-2dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_below="@+id/destinationText"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:id="@+id/divider"
            android:layout_below="@+id/destination"
            android:background="#A3A6A8" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Date    :"
            android:id="@+id/textView"
            android:layout_below="@+id/divider"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="10dp"
            android:layout_alignParentStart="true" />

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:cardElevation="5dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="11dp"
            android:layout_marginRight="10dp"
            android:layout_below="@+id/divider"
            app:cardCornerRadius="10dp"
            android:id="@+id/dateCard"
            android:layout_toEndOf="@+id/textView">

            <EditText
                android:id="@+id/date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="false"
                android:inputType="date"
                android:ems="10"
                android:paddingLeft="5dp"
                android:paddingStart="5dp"
                android:textSize="20sp" />

        </android.support.v7.widget.CardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Time   :"
            android:id="@+id/textView2"
            android:layout_below="@+id/textView"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="10dp"
            android:layout_alignParentStart="true" />

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:cardElevation="5dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="11dp"
            android:layout_marginRight="10dp"
            android:layout_below="@+id/dateCard"
            android:layout_toEndOf="@+id/textView2"
            app:cardCornerRadius="10dp"
            android:id="@+id/timeCard">

            <EditText
                android:id="@+id/time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:focusable="false"
                android:inputType="date"
                android:ems="10"
                android:paddingLeft="5dp"
                android:paddingStart="5dp"
                android:textSize="20sp" />

        </android.support.v7.widget.CardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Role    :"
            android:id="@+id/textView3"
            android:layout_below="@+id/textView2"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="10dp"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Passenger"
            android:id="@+id/role"
            android:layout_below="@+id/textView2"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="10dp"
            android:layout_toEndOf="@+id/textView3" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Information :"
            android:id="@+id/textView5"
            android:layout_below="@+id/textView3"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="10dp"
            android:layout_alignParentStart="true" />

        <EditText
            android:id="@+id/information"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_margin="10dp"
            android:layout_below="@+id/textView5"
            android:background="@drawable/rounded_corner2"
            android:lines="5"
            android:maxLength="100"
            android:hint="Enter any extra information..."
            android:ems="10"
            android:padding="5dp"
            android:textSize="20sp" />

    </RelativeLayout>

</ScrollView>
